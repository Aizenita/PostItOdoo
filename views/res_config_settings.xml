<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings" model="ir.ui.view">
        <field name="name">my_integration.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- Si no existe, primero creamos el bloque General Settings -->
            <xpath expr="//div[contains(@class, 'settings')]" position="inside">
                <div id="general_settings" class="app_settings_block" string="General Settings">
                    <h2>General Settings</h2>
                </div>
            </xpath>

            <!-- Ahora insertamos dentro de General Settings -->
            <xpath expr="//div[@id='general_settings']" position="inside">
                <div class="app_settings_block" data-string="My Integration" string="My Integration">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <!-- Ícono del módulo -->
                                <img src="/postitodoo/static/description/icon.png"
                                     alt="My Integration Icon"
                                     class="img img-fluid"
                                     style="width: 60px; height: auto;"/>
                                <span class="fa fa-cogs fa-3x text-primary"/>
                            </div>

                            <!-- Botón para abrir configuración -->
                            <div class="o_setting_right_pane">
                                <button name="action_open_my_integration_settings"
                                        type="object"
                                        class="btn btn-primary">
                                    Rrss
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
